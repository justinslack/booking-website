---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h2><a class="logo" href="/">{SITE_TITLE}<span>Artist management</span></a></h2>
	<nav>
			<!-- <HeaderLink href="/">Home</HeaderLink> -->
			<HeaderLink href="/artists">Our artists</HeaderLink>
			<HeaderLink href="/about">About us</HeaderLink>
			<HeaderLink href="/booking">Booking</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding-inline: 5rem;
		background: white;
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;

		@media (max-width: 768px) {
  				padding-inline: 2rem;
				
			
		}
	}
	.logo span {
		display: block;
		font-size: 0.4em;
		font-weight: 300;
	}
	h2 {
		margin: 0;
	}

	h2 a,
	h2 a.active {
		color: rgba(var(--black));
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}
	nav a:not(.logo) {
		color: var(--black);
		text-decoration: none;
		font-size: 1rem;
		border-bottom: 1px solid rgba(0, 0, 0, 0);
		text-transform: uppercase;
	}
	nav a.active,
	nav a:hover {
		text-decoration: none;
		border-bottom: 1px solid rgba(var(--black));
	}
</style>
